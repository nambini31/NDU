@model DocumentIndexFile_DTO

@{
    var bgcolor = "";
}

    <div class="form-group">
        <div class="form-group has-feedback">
            <br />

            @if (Model.IsFramework != 1)
            {
                        <Label style="font-size: x-large;height: auto;font-weight: 900;">FOLIO <span style='color:red;'>*</span></Label>

                        <br />

                        <select required="required" name="Folio" data-placeholder='Choose folio' class="form-control my_select_box" multiple style="font-size: xxx-large;height: auto;font-weight: 900;">
                    @foreach (var item in Model.docsDTO)
                    {
                    bgcolor = item.FileValueId != null ? "#ffa79c" : "";

                        @if (item.FileValueId == Model.FileId)
                        {
                                <option selected data-folio="@item.Folios ( @item.NbrOfPages pages )" data-document_name="@item.Project_type_name" value="@item.Project_type_value_id">@item.Folios ( @item.NbrOfPages pages )</option>
                        }
                        else
                        {
                                <option style="background-color:@bgcolor" data-folio="@item.Folios ( @item.NbrOfPages pages )" data-document_name="@item.Project_type_name" value="@item.Project_type_value_id">@item.Folios ( @item.NbrOfPages pages )</option>
                        }
                    }
                        </select>
            }
            </div>
      </div>





